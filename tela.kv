
<ScreenManagement>:
    PaginaInicial:
    PaginaCadastro:
    PaginaColheita:
    PaginaRelatorio:

<Menu@StackLayout>:
    orientation: 'lr-bt'
    spacing: 0.7  
    Button:
        size_hint: 0.2, None 
        height: '35dp'
        on_release: app.paginicial()
        text: 'INICIAL'
    Button:
        size_hint: 0.2, None 
        height: '35dp'
        on_release: app.pagcadastro()
        text: 'CADASTRO'
    Button:
        size_hint: 0.2, None 
        height: '35dp'
        on_release: app.pagcolheita()
        text: 'COLHEITA'
    Button:
        size_hint: 0.2, None 
        height: '35dp'
        on_release: app.pagrelatorio()
        text: 'RELATORIO'

<PaginaInicial>:
    name: 'paginaInicial'
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp' 
        Menu:
            size_hint: 0.9, 0.10
        BoxLayout:
            orientation: 'horizontal'
            Image:
                id: img_fundo
                size_hint: (0.3, 1)
<Especie@Label>:
    especie_arvore: ''
    cor_especie: [ 0.8, 0.8, 0.8 ]
    cor_fonte: '000000'

    size_hint: 0.2, 0.5
    text_size: self.size
    font_size: '23sp'
    halign: 'center'
    valign: 'middle'
    text: "[color=" + root.cor_fonte +"]" +'[b]ESPECIE: [/b]' + root.especie_arvore + "[/color]"
    markup: True
    canvas.before:
        Color:
            rgb: root.cor_especie[0], root.cor_especie[1], root.cor_especie[2]
        Rectangle:
            size: self.size
            pos: 

<Grupo@Label>:
    grupo_arvore: ''
    cor_grupo: [ 0.8, 0.8, 0.8 ]
    cor_fonte: '000000'

    size_hint: 0.2, 0.5
    text_size: self.size
    font_size: '23sp'
    halign: 'center'
    valign: 'middle'
    text: "[color=" + root.cor_fonte +"]" +'[b]GRUPO: [/b]' + root.grupo_arvore + "[/color]"
    markup: True
    canvas.before:
        Color:
            rgb: root.cor_grupo[0], root.cor_grupo[1], root.cor_grupo[2]
