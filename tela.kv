<Data@Label>:
    data_arvore: ''
    cor_data: [ 0.8, 0.8, 0.8 ]
    cor_fonte: '000000'

    size_hint: 0.2, 1
    text_size: self.size
    font_size: '23sp'
    halign: 'center'
    valign: 'middle'
    text: "[color=" + root.cor_fonte +"]" +'[b]DATA: [/b]' + root.data_arvore + "[/color]"
    markup: True
    canvas.before:
        Color:
            rgb: root.cor_data[0], root.cor_data[1], root.cor_data[2]
        Rectangle:
            size: self.size
            pos: self.pos
    
<Lcadastro@BoxLayout>:
    orientation: 'vertical'
    Especie:
        id: especie_arvore
    Label:
        size_hint_y: None
        height: cm(0.3)
    Grupo:
        id: grupo_arvore
    Label:
        size_hint_y: None
        height: cm(0.3)
    Data:
        id: data_arvore
    Label:
        size_hint_y: None
        height: cm(0.3)

<PaginaCadastro>:
    name: 'paginaCadastro'
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp' 
        Menu:
            size_hint: 0.9, 0.10
        BoxLayout:
            orientation: 'horizontal'
            Lcadastro:
                id: lcadastro
                size_hint: (0.3, 1)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (2, 0.05)



